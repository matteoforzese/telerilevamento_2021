# primo codice in R per telerilevamento
setwd("C:/lab/")
#utilizzare pacchetto
library(raster)
#importare immagine satellitare
brick("p224r63_2011_masked.grd")->p224r63_2011
p224r63_2011
plot(p224r63_2011)
#cambio colore
cl<-colorRampPalette(c("black","grey","light grey"))(100)
#plottare con nuovi colori
plot(p224r63_2011, col=cl)
colore<-colorRampPalette(c("blue","green","magenta"))(100)
plot(p224r63_2011, col=colore)
